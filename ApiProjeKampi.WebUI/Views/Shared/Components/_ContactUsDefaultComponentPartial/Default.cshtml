@model List<ApiProjeKampi.WebUI.Dtos.FeatureDtos.ResultFreatureDto>
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Sezen & Co</h2>
        <p><span>Neredeyiz ?</span> <span class="description-title">Neredeyiz ?</span></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="mb-5">
            <iframe style="width: 100%; height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.5615494234853!2d28.97535597655313!3d41.03484741778765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab760eb80050f%3A0xa1fd5f3892bd1716!2zSMO8c2V5aW5hxJ9hLCBOZXZpemFkZSBTay4sIDM0NDM1IEJleW_En2x1L8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1748881471693!5m2!1str!2str" frameborder="0" allowfullscreen=""></iframe>
        </div><!-- End Google Maps -->

        <div class="row gy-4">

            @foreach (var item in Model.Where(x => x.FeatureId >= 10 && x.FeatureId <= 20).OrderBy(x => x.FeatureId))
            {

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                        <i class="@item.ImageUrl"></i>
                        <div>
                            <h3>@item.Title</h3>
                            <p>@item.SubTitle</p>
                        </div>
                    </div>
                </div>
            }

        </div>

        <form action="forms/contact.php" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="600">
            <div class="row gy-4">

                <div class="col-md-6">
                    <input type="text" name="name" class="form-control" placeholder="İsminiz" required="">
                </div>

                <div class="col-md-6 ">
                    <input type="email" class="form-control" name="email" placeholder="Mail Adresiniz" required="">
                </div>

                <div class="col-md-12">
                    <input type="text" class="form-control" name="subject" placeholder="Konu Başlığı" required="">
                </div>

                <div class="col-md-12">
                    <textarea class="form-control" name="message" rows="6" placeholder="İletiniz" required=""></textarea>
                </div>

                <div class="col-md-12 text-center">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Teşekkürler!</div>

                    <button type="submit">Mail İlet</button>
                </div>

            </div>
        </form><!-- End Contact Form -->

    </div>

</section>